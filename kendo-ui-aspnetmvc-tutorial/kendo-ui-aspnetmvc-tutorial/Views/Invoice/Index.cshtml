@using Telerik.Scaffolders.Models.Grid

@(Html.Kendo().Grid<KendoQsBoilerplate.Invoice>()
    .Name("grid")
       .Columns(columns =>
       {
         columns.Bound(c => c.CustomerName);
         columns.Bound(c => c.OrderDate);
         columns.Bound(c => c.ProductName);
         columns.Bound(c => c.UnitPrice);
         columns.Bound(c => c.Quantity);
         columns.Bound(c => c.Salesperson);
       })
        .Editable(editable => editable.Mode(GridEditMode.InLine))
        .ToolBar(toolbar =>
        {
          toolbar.Create();
        })
        .Pageable()
        .Sortable()
        .DataSource(dataSource => dataSource
             .Ajax()
             .PageSize(20)
             .Model(model => model.Id(p => p.OrderID))
             .Read(read => read.Action("Read", "Invoice"))
             .Create(update => update.Action("Create", "Invoice"))
             .Update(update => update.Action("Update", "Invoice"))
             .Destroy(update => update.Action("Delete", "Invoice"))
    )
)
